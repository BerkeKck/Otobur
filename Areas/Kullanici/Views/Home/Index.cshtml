@{
    ViewData["Title"] = "";
}
<div id="plant-preloader">
    <video id="plant-video" width="240" height="240" autoplay muted playsinline>
        <source src="~/videos/Plant.mp4" type="video/mp4" />
        Tarayıcınız video etiketini desteklemiyor.
    </video>
</div>
<link rel="stylesheet" href="~/css/landing-animation.css" asp-append-version="true" />
<div class="container py-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-6 text-center">
            <!-- Logo -->
            <img src="~/icons/Otobur.Icon.svg" alt="Otobur Logo" style="width:64px;height:64px;" />
            <h1 class="display-5 fw-bold text-success mb-3">Otobur Uygulamasına Hoş Geldiniz</h1>
            <p class="lead text-secondary mb-4">
                Bitki koleksiyonunuzu kolayca yönetin, kayıtlarınızı güvenle saklayın ve modern arayüz ile verilerinize hızlıca ulaşın.
            </p>
            <a href="/Admin/Aksesyon" class="btn btn-success btn-lg px-5 shadow-sm">
                <i class="bi bi-box-arrow-in-right"></i> Yönetim Paneline Git
            </a>
        </div>
    </div>
    <div class="row mt-5 justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h4 class="card-title text-success mb-3">Neler Yapabilirsiniz?</h4>
                    <ul class="list-unstyled fs-5">
                        <li><i class="bi bi-check-circle-fill text-success me-2"></i> Aksesyon kayıtlarını görüntüleyin ve yönetin</li>
                        <li><i class="bi bi-check-circle-fill text-success me-2"></i> Kullanıcı yönetimi ve yetkilendirme</li>
                        <li><i class="bi bi-check-circle-fill text-success me-2"></i> Güvenli ve hızlı veri erişimi</li>
                        <li><i class="bi bi-check-circle-fill text-success me-2"></i> Modern ve kullanıcı dostu arayüz</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- Alt yönlendirmeler -->
    <div class="row mt-4 justify-content-center">
        <div class="col-md-8 text-center">
            <a href="https://github.com/berkekck" target="_blank" class="text-muted small text-decoration-none" style="opacity:0.6;">
                Berke Küçük
            </a>
            <span class="mx-2 text-muted">|</span>
            <a href="https://www.ngbb.org.tr/" target="_blank" class="text-muted small text-decoration-none" style="opacity:0.7;">
                NGBB - Nezahat Gökyiğit Botanik Bahçesi
            </a>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var video = document.getElementById('plant-video');
            video.onended = function () {
                document.getElementById('plant-preloader').style.display = 'none';
                document.getElementById('main-content').style.display = '';
            };
            setTimeout(function () {
                if (document.getElementById('plant-preloader').style.display !== 'none') {
                    document.getElementById('plant-preloader').style.display = 'none';
                    document.getElementById('main-content').style.display = '';
                }
            }, 2000);
        });
    </script>
    <style>
        #plant-preloader {
            position: fixed;
            z-index: 9999;
            background: #fff;
            width: 100vw;
            height: 100vh;
            top: 0;
            left: 0;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            #plant-preloader video {
                border-radius: 1rem;
                box-shadow: 0 0.5rem 1rem rgba(70,46,26,0.08);
                background: #fff;
            }
    </style>
}
<!-- Bootstrap Icons CDN (gerekirse ekleyin) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">