@model Otobur.Models.Models.Kullanici
@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = "/Areas/Kullanici/Views/Shared/_AuthLayout.cshtml";
}
<div class="auth-container">
    <img src="~/icons/Otobur.Icon.svg" alt="Otobur Logo" class="auth-logo" />
    <h2>Kayıt Ol</h2>
    <form asp-action="Register" method="post" novalidate>
        <div class="auth-field">
            <input asp-for="KullaniciAdi" placeholder="Kullanıcı Adı" required />
            <span asp-validation-for="KullaniciAdi" class="auth-error"></span>
        </div>
        <div class="auth-field">
            <input asp-for="KullaniciKodu" placeholder="Kullanıcı Kodu" required />
            <span asp-validation-for="KullaniciKodu" class="auth-error"></span>
        </div>
        <div class="auth-field">
            <input asp-for="Parola" type="password" placeholder="Parola" required />
            <span asp-validation-for="Parola" class="auth-error"></span>
        </div>
        <div class="auth-field">
            <input asp-for="Telefon" placeholder="Telefon" />
            <span asp-validation-for="Telefon" class="auth-error"></span>
        </div>
        <div class="auth-field">
            <input asp-for="Eposta" type="email" placeholder="E-posta" required />
            <span asp-validation-for="Eposta" class="auth-error"></span>
        </div>
        <button type="submit" class="auth-btn">Kayıt Ol</button>
    </form>
    <p class="auth-link">Zaten hesabınız var mı? <a asp-area="Kullanici" asp-controller="Account" asp-action="Login">Giriş Yap</a></p>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}