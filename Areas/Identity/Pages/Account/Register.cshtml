@page
@model RegisterModel
@{
    ViewData["Title"] = "Kayıt Ol";
}

<link rel="stylesheet" href="~/css/site-auth.css" asp-append-version="true" />
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">
            <div class="register-card shadow">
                <div class="register-header">
                    <img src="~/icons/Otobur.Icon.svg" alt="Otobur Logo" style="width:86px;height:86px;" class="mb-2" />
                    <div class="register-title mb-1">Kayıt Ol</div>
                    <div class="fw-light">Yeni bir hesap oluşturun</div>
                </div>
                <div class="p-4">
                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post" autocomplete="off">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                                <span asp-validation-for="Input.Email" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <input asp-for="Input.UserName" class="form-control" placeholder="Kullanıcı Adı" />
                                <span asp-validation-for="Input.UserName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <input asp-for="Input.Password" class="form-control" placeholder="Şifre" type="password" />
                                <span asp-validation-for="Input.Password" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Şifre Tekrar" type="password" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <input asp-for="Input.UserCode" class="form-control" placeholder="Kullanıcı Kodu" />
                                <span asp-validation-for="Input.UserCode" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Telefon Numarası" />
                                <span asp-validation-for="Input.PhoneNumber" class="text-danger small"></span>
                            </div>
                            <div class="col-12">
                                <select asp-for="Input.Role" class="form-select">
                                    <option value="">Rol Seçiniz</option>
                                    <option value="Eğitimde">Eğitimde</option>
                                    <option value="Normal Kullanici">Normal Kullanıcı</option>
                                    <option value="Sistem Yöneticisi">Sistem Yöneticisi</option>
                                </select>
                                <span asp-validation-for="Input.Role" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="mt-4 d-grid">
                            <button type="submit" class="btn register-btn btn-lg">
                                <i class="bi bi-person-plus me-2"></i>Kayıt Ol
                            </button>
                        </div>
                    </form>
                    <div class="text-center mt-3">
                        <a asp-page="./Login" class="btn btn-soil btn-sm px-4">
                            <i class="bi bi-box-arrow-in-right me-1"></i> Giriş Yap
                        </a>
                    </div>
                </div>
            </div>
            <div class="text-center mt-3 register-link">
                <a href="https://github.com/berkekck" target="_blank" class="text-muted text-decoration-none">Berke Küçük</a>
                <span class="mx-2 text-muted">|</span>
                <a href="https://www.ngbb.org.tr/" target="_blank" class="text-muted text-decoration-none">NGBB</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}