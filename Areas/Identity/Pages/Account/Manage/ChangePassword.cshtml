@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Şifre Değiştir";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<style>
    .btn-soil {
        color: #fff;
        background-color: #462E1A;
        border-color: #462E1A;
    }

        .btn-soil:hover, .btn-soil:focus {
            color: #fff;
            background-color: #3a2413;
            border-color: #3a2413;
        }

    .card-custom {
        border-radius: 1rem;
        box-shadow: 0 0.5rem 1rem rgba(70,46,26,0.08);
        border: 1px solid #e5e5e5;
    }
</style>

<div class="row justify-content-center">
    <div class="col-md-7 col-lg-6">
        <div class="card card-custom mt-4">
            <div class="card-body p-4">
                <h3 class="mb-4 text-center fw-bold text-success">
                    <i class="bi bi-key me-2"></i>@ViewData["Title"]
                </h3>
                <partial name="_StatusMessage" for="StatusMessage" />
                <form id="change-password-form" method="post" autocomplete="off">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Mevcut şifrenizi girin" />
                        <label asp-for="Input.OldPassword" class="form-label"></label>
                        <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Yeni şifrenizi girin" />
                        <label asp-for="Input.NewPassword" class="form-label"></label>
                        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Yeni şifrenizi tekrar girin" />
                        <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="w-100 btn btn-soil btn-lg d-flex align-items-center justify-content-center gap-2">
                        <i class="bi bi-arrow-repeat"></i>
                        Şifreyi Güncelle
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}