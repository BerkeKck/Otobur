                <div class="col-md-6 mb-3">
                    <label class="form-label">Aksesyon Numarasý</label>
                    <input asp-for="AksesyonNumarasi" class="form-control" readonly />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Bitkinin Adý</label>
                    <input asp-for="BitkininAdi" class="form-control" readonly />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Miktar</label>
                    <input asp-for="Miktar" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Bulunduðu Dolap</label>
                    <input asp-for="BulunduguDolap" class="form-control" />
                </div>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-success">Kaydet</button>
                <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
            </div>
        </div>
    </div>
</form>