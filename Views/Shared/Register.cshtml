@model Otobur.Models.Models.Kullanici
@{
    ViewData["Title"] = "Kayıt Ol";
}
<div class="container mt-5" style="max-width: 600px;">
    <h2 class="text-primary">Kayıt Ol</h2>
    <form asp-action="Register" method="post">
        <div class="form-group mb-2">
            <label>Kullanıcı Adı</label>
            <input asp-for="KullaniciAdi" class="form-control" required />
        </div>
        <div class="form-group mb-2">
            <label>E-posta</label>
            <input asp-for="Eposta" class="form-control" required />
        </div>
        <div class="form-group mb-2">
            <label>Telefon</label>
            <input asp-for="Telefon" class="form-control" />
        </div>
        <div class="form-group mb-2">
            <label>Parola</label>
            <input asp-for="Parola" type="password" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-success mt-2">Kayıt Ol</button>
    </form>
</div>
