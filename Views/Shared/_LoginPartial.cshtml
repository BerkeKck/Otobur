@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<style>
    .btn-soil {
        color: #fff;
        background-color: #462E1A;
        border-color: #462E1A;
    }

        .btn-soil:hover, .btn-soil:focus {
            color: #fff;
            background-color: #462E1A;
            border-color: #462E1A;
        }
</style>

@if (SignInManager.IsSignedIn(User))
{
    <div class="d-flex align-items-center gap-3">
        <span class="fw-semibold text-success d-flex align-items-center">
            <i class="bi bi-person-circle me-2 fs-5"></i>
            @UserManager.GetUserName(User)
        </span>
        <form id="logoutForm" class="mb-0" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="btn btn-outline-danger btn-sm d-flex align-items-center gap-1 px-3">
                <i class="bi bi-box-arrow-right"></i>
                Çıkış Yap
            </button>
        </form>
    </div>
}
else
{
    <div class="d-flex align-items-center gap-2">
        <a class="btn btn-soil btn-sm d-flex align-items-center gap-1 px-3" id="register" asp-area="Identity" asp-page="/Account/Register">
            <i class="bi bi-person-plus"></i>
            Kayıt Ol
        </a>
        <a class="btn btn-success btn-sm d-flex align-items-center gap-1 px-3" id="login" asp-area="Identity" asp-page="/Account/Login">
            <i class="bi bi-box-arrow-in-right"></i>
            Giriş Yap
        </a>
    </div>
}