
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Otobur</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="main-layout d-flex">
        <!-- Sidebar -->
        @if (User.IsInRole(SD.Role_Admin))
        {
            <aside class="sidebar bg-light p-3">
                <div class="logo d-flex align-items-center mb-4">
                <img src="~/icons/Otobur.Icon.svg" alt="Otobur Logo" style="width:48px;height:48px;" />
                <span class="ms-2 fs-4 fw-bold">OTOBUR</span>
            </div>

            <nav class="nav flex-column">
                <a class="menu-item nav-link" asp-area="Admin" asp-controller="Aksesyon" asp-action="Index">
                    <img src="~/icons/Aksesyon.svg" alt="Aksesyon" style="height:32px;" class="me-2" />
                    Aksesyon Kayıt
                </a>
                    <a class="menu-item nav-link" asp-area="Admin" asp-controller="Veritabani" asp-action="Index">
                    <img src="~/icons/Veritabani.svg" alt="Veritabanı" style="height:32px;" class="me-2" />
                    Veritabanı Sorgu
                </a>
                    <a class="menu-item nav-link" asp-area="Admin" asp-controller="Herbaryum" asp-action="Index">
                    <img src="~/icons/Herbaryum.svg" alt="Herbaryum" style="height:32px;" class="me-2" />
                    Herbaryum
                </a>
                    <a class="menu-item nav-link" asp-area="Admin" asp-controller="BitkiDurum" asp-action="Index">
                    <img src="~/icons/BitkiDurum.svg" alt="Bitki Durum" style="height:32px;" class="me-2" />
                    Bitki Durum
                </a>
                    <a class="menu-item nav-link" asp-area="Admin" asp-controller="TohumBankasi" asp-action="Index">
                    <img src="~/icons/TohumBankasi.svg" alt="Tohum Bankası" style="height:32px;" class="me-2" />
                    Tohum Bankası
                </a>
                    <a class="menu-item nav-link" asp-area="Admin" asp-controller="Yetkilendirme" asp-action="Index">
                     <img src="~/icons/Yetkilendirme.svg" alt="Yetkilendirme" style="height:32px;" class="me-2" />
                     Yetkilendirme
                </a>
            </nav>
                <!-- Alt yönlendirmeler -->
                <div class="row mt-4 justify-content-center">
                    <div class="col-md-8 text-center">
                        <a href="https://github.com/berkekck" target="_blank" class="text-muted small text-decoration-none" style="opacity:0.6;">
                            Berke Küçük
                        </a>
                        <span class="mx-2 text-muted">|</span>
                        <a href="https://www.ngbb.org.tr/" target="_blank" class="text-muted small text-decoration-none" style="opacity:0.7;">
                            NGBB - Nezahat Gökyiğit Botanik Bahçesi
                        </a>
                    </div>
                </div>
            </aside>
        }
        @if (User.IsInRole(SD.Role_User))
        {
            <aside class="sidebar bg-light p-3">
                <div class="logo d-flex align-items-center mb-4">
                    <img src="~/icons/Otobur.Icon.svg" alt="Otobur Logo" style="width:48px;height:48px;" />
                    <span class="ms-2 fs-4 fw-bold">OTOBUR</span>
                </div>

                <nav class="nav flex-column">
                    <a class="menu-item nav-link" asp-area="Kullanici" asp-controller="Aksesyon" asp-action="Index">
                        <img src="~/icons/Aksesyon.svg" alt="Aksesyon" style="height:32px;" class="me-2" />
                        Aksesyon Kayıt
                    </a>
                    <a class="menu-item nav-link" asp-area="Kullanici" asp-controller="Veritabani" asp-action="Index">
                        <img src="~/icons/Veritabani.svg" alt="Veritabanı" style="height:32px;" class="me-2" />
                        Veritabanı Sorgu
                    </a>
                    <a class="menu-item nav-link" asp-area="Kullanici" asp-controller="Herbaryum" asp-action="Index">
                        <img src="~/icons/Herbaryum.svg" alt="Herbaryum" style="height:32px;" class="me-2" />
                        Herbaryum
                    </a>
                    <a class="menu-item nav-link" asp-area="Kullanici" asp-controller="BitkiDurum" asp-action="Index">
                        <img src="~/icons/BitkiDurum.svg" alt="Bitki Durum" style="height:32px;" class="me-2" />
                        Bitki Durum
                    </a>
                    <a class="menu-item nav-link" asp-area="Kullanici" asp-controller="TohumBankasi" asp-action="Index">
                        <img src="~/icons/TohumBankasi.svg" alt="Tohum Bankası" style="height:32px;" class="me-2" />
                        Tohum Bankası
                    </a>
                </nav>
                <!-- Alt yönlendirmeler -->
                <div class="row mt-4 justify-content-center">
                    <div class="col-md-8 text-center">
                        <a href="https://github.com/berkekck" target="_blank" class="text-muted small text-decoration-none" style="opacity:0.6;">
                            Berke Küçük
                        </a>
                        <span class="mx-2 text-muted">|</span>
                        <a href="https://www.ngbb.org.tr/" target="_blank" class="text-muted small text-decoration-none" style="opacity:0.7;">
                            NGBB - Nezahat Gökyiğit Botanik Bahçesi
                        </a>
                    </div>
                </div>
            </aside>
        }

        <div class="content-area">
            <header class="topbar d-flex align-items-center justify-content-between px-3 py-2 text-black">
                <form class="search-bar" onsubmit="return false;">
                </form>
                <div class="topbar-icons me-auto">
                    <partial name="_LoginPartial" />
                    <button class="icon-btn" id="Ayarlar" title="Ayarlar" type="button">
                        <img src="~/icons/Ayarlar.svg" alt="Ayarlar" class="icon" style="height:24px;" />
                    </button>
                </div> 
            </header>

            <!-- Main Content -->
            <main class="p-4">
                @RenderBody()
            </main>
        </div>
    </div>
    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
