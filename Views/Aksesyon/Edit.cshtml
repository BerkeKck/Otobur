@model Aksesyon

<form method="post">
    <div class="container" style="max-width: 700px;">
        <div class="border p-4 mt-4 bg-white rounded shadow-sm">
            <div class="row pb-2">
                <h2 class="text-primary">Aksesyonu Düzenle</h2>
                <hr />
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Aksesyon Numarası</label>
                    <input asp-for="AksesyonNumarasi" class="form-control" readonly />
                    <span asp-validation-for="AksesyonNumarasi" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Bitkinin Adı</label>
                    <input asp-for="BitkininAdi" class="form-control" />
                    <span asp-validation-for="BitkininAdi" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Materyal Çeşidi</label>
                    <select asp-for="MateryalCesidi" class="form-control" asp-items="Html.GetEnumSelectList<MateryalCesidiEnum>()"></select>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Köken</label>
                    <input asp-for="Koken" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Lokasyon</label>
                    <input asp-for="Lokasyon" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Koordinat</label>
                    <input asp-for="Koordinat" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Toplanma Tarihi</label>
                    <input asp-for="ToplanmaTarihi" type="date" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Toplayıcı Adı</label>
                    <input asp-for="ToplayiciAdi" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Toplayıcı Kodu</label>
                    <input asp-for="ToplayiciKodu" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Toplayıcı Numarası</label>
                    <input asp-for="ToplayiciNumarasi" class="form-control" />
                </div>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-success">Kaydet</button>
                <a asp-controller="Aksesyon" asp-action="Index" class="btn btn-secondary">Geri Dön</a>
                <a asp-action="Delete" asp-route-id="@Model.AksesyonNumarasi" class="btn btn-danger"
                   onclick="return confirm('Bu kaydı silmek istediğinize emin misiniz?');">Sil</a>
            </div>
        </div>
    </div>
</form>
<!-- Silme Onay Modalı -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-danger" id="deleteModalLabel">Silme Onayı</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body">
                Bu kaydı silmek istediğinize emin misiniz?
            </div>
            <div class="modal-footer">
                <form asp-action="Delete" asp-route-id="@Model.AksesyonNumarasi" method="post">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Vazgeç</button>
                    <button type="submit" class="btn btn-danger">Sil</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}